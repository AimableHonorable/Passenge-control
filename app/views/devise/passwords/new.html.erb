
<h2 class="text-center my-5">Forgot your password?</h2>
<div class="w-25 m-auto shadow p-2 bg-light border rounded">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control " %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "mt-2 form-control btn-success" %>
    </div>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <%= link_to "Back to login", new_session_path(resource_name) %><br />
  <% end %>

</div>
