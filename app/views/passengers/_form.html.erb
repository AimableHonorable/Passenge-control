<div class="container m-auto">


<%= form_with(model: @passenger, local: true) do |form| %>
<% if @passenger.errors.any? %>
   <div id="error_explanation" class="alert alert-danger" role="alert">
     <h2><%= @passenger.errors.count %>errors occurred.</h2>
     <ul>
     <% @passenger.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
 <% end %>
  <div class="my-2">
    <div class="register text-center border rounded my-2 shadow">
      <h4>Passenger information</h4>
      <div class="row py-2">
        <div class="col">
          <div class="form-group">
            <%= form.label :first_name%>
            <%= form.text_field :first_name, class: "form-control w-75 m-auto"%>
          </div>

          <div class="form-group">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, class: "form-control w-75 m-auto"%>
          </div>

          <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control w-75 m-auto"%>
          </div>


        </div>
        <div class="col text-center">
          <div class="form-group">
            <%= form.label :phone %>
            <%= form.text_field :phone, class: "form-control w-75 m-auto"%>
          </div>

          <div class="form-group">
            <%= form.label :id_number %>
            <%= form.text_field :id_number, class: "form-control w-75 m-auto"%>
          </div>

        </div>
      </div>
    </div>

    <div class="register text-center border rounded my-2 shadow">
      <h4>Reference information</h4>
      <div class="row py-2">
        <div class="col">
          <div class="form-group">
            <%= form.label :ref_first_name %>
            <%= form.text_field :ref_first_name, class: "form-control w-75 m-auto"%>
          </div>

          <div class="form-group">
            <%= form.label :ref_last_name %>
            <%= form.text_field :ref_last_name, class: "form-control w-75 m-auto"%>
          </div>

        </div>
        <div class="col text-center">
          <div class="form-group">
            <%= form.label :destination %>
            <%= form.select :destination, [ 'Gasabo',
                                            'Kicukiro',
                                            'Nyarugenge',
                                            'Gicumbi',
                                            'Gakenke',
                                            'Rurindo',
                                            'Musanze',
                                            'Burera',
                                            'Rubavu',
                                            'Nyabihu',
                                            'Ngororero',
                                            'Nyamasheke',
                                            'Nyamagabe',
                                            'Rusizi',
                                            'Nyaruguru',
                                            'Gisagara',
                                            'Huye',
                                            'Nyanza',
                                            'Ruhango',
                                            'Muhanga',
                                            'Kamonyi',
                                            'Bugesera',
                                            'Ngoma',
                                            'Kirehe',
                                            'Kayonza',
                                            'Rwamagana',
                                            'Gatsibo',
                                            'Nyagatare'], :prompt=>"Select district", class: "form-control w-75 m-auto"%>
          </div>

          <div class="form-group">
            <%= form.label :ref_phone_number %>
            <%= form.text_field :ref_phone_number, class: "form-control w-75 m-auto"%>
          </div>

        </div>
      </div>
    </div>
    <div class="row text-light text-center">
      <div class="col">
        <%= form.label :entry_on %>
        <%= form.date_field :entry_on, class: "form-control w-75 m-auto"%>
      </div>
      <div class="col">
        <%= form.label :return_on %>
        <%= form.date_field :return_on, class: "form-control w-75 m-auto"%>
      </div>
    </div>
    <div class="row text-center my-4">
      <%= form.submit 'Save', class: "form-control w-25 m-auto my-4 btn-info btn-sm rounded-pill shadow" %>
    </div>

  </div>

<% end %>
</div>
